<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/main"
    >
	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" android:text="@string/app_name" android:layout_marginBottom="10sp"/>
    
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Average Heart Rate (bpm)" android:id="@+id/LblAveHeartRate"></TextView>
    <EditText android:inputType="number" android:layout_width="50sp" android:layout_height="wrap_content" android:id="@+id/InpAverageHeartRate" android:maxLines="1" android:maxLength="3" android:lines="1"></EditText>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Minutes of Exercise" android:id="@+id/LblDuration"></TextView>
    <EditText android:inputType="number" android:layout_width="50sp" android:layout_height="wrap_content" android:id="@+id/InpDuration" android:maxLines="1" android:maxLength="3" android:lines="1"></EditText>
    
	<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/BtnCalculate" android:text="Calculate" android:layout_gravity="center"></Button>
</LinearLayout>
